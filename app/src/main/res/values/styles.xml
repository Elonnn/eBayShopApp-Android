<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/tab_selected_color</item>
        <item name="colorPrimaryDark">@color/tab_selected_color</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- The launcher theme. It sets the main window background to the launch_screen drawable -->
    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
        <!-- Optional, on Android 5+ you can modify the colorPrimaryDark color to match the windowBackground color for further branding-->
         <item name="colorPrimaryDark">@color/ic_launcher_background</item>
    </style>

    <style name="BlueLabelText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#0A5BE8</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:gravity">bottom</item>
    </style>

    <style name="CheckBoxText" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:fontFamily">monospace</item>
    </style>

    <style name="RedWarningText" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:visibility">gone</item>
        <item name="android:textColor">#FA0606</item>
    </style>

    <style name="BlueButton" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">#2F4FFD</item>
    </style>
</resources>
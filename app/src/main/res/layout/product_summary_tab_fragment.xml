<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:fadeScrollbars="true"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/imageViewContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="30dp"
                    android:orientation="horizontal" />
            </HorizontalScrollView>

            <TextView
                android:id="@+id/title"
                style="@style/BlackNormalText"
                android:layout_margin="@dimen/text_horizontal_margin" />

            <TextView
                android:id="@+id/price"
                style="@style/GreenPriceText"
                android:layout_margin="@dimen/text_horizontal_margin" />

            <View style="@style/Divider" />

            <TextView
                android:id="@+id/textView1"
                style="@style/BlackHead"
                android:drawableStart="@drawable/information"
                android:text="@string/product_features" />

            <WebView
                android:id="@+id/webView1"
                android:layout_marginStart="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View style="@style/Divider" />

            <TextView
                android:id="@+id/textView2"
                style="@style/BlackHead"
                android:drawableStart="@drawable/wrench"
                android:text="@string/specifications" />

            <WebView
                android:id="@+id/webView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>